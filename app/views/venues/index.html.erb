<h1>Venues</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Street Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td>
          <%= link_to image_tag(venue.image.url(:small)), venue.image.url %>
        </td>
        <td><%= venue.name %></td>
        <td><%= venue.description %></td>
        <% segment = ", " %>
        <% if venue.street_1.to_s.strip == "" || venue.street_2.to_s.strip == "" %>
          <% segment = "" %>
        <% end %>
        <td><%= venue.street_1 + segment + venue.street_2.to_s %></td>
        <td><%= venue.city %></td>
        <td><%= venue.state %></td>
        <td><%= venue.zip %></td>
        <td><%= link_to 'Show', venue %></td>
        <% if !current_user.nil? && venue.user == current_user %>
          <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
          <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Venue', new_venue_path %>
<% end %>
