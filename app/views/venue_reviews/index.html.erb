<p id="notice"><%= notice %></p>

<h1>Venue Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Review</th>
      <th>User</th>
      <th>Venue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venue_reviews.each do |venue_review| %>
      <tr>
        <td><%= venue_review.review %></td>
        <td><%= venue_review.user %></td>
        <td><%= venue_review.venue %></td>
        <td><%= link_to 'Show', venue_review %></td>
        <td><%= link_to 'Edit', edit_venue_review_path(venue_review) %></td>
        <td><%= link_to 'Destroy', venue_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Venue Review', new_venue_review_path %>
